<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.example.catalog.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>com.example.catalog.AddUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <servlet-class>com.example.catalog.ForgotPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>landingAdminServlet</servlet-name>
        <servlet-class>com.example.catalog.landingAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>landingTeacherServlet</servlet-name>
        <servlet-class>com.example.catalog.landingTeacherServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentEnrollmentTicketServlet</servlet-name>
        <servlet-class>com.example.catalog.StudentEnrollmentTicketServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentManagementServlet</servlet-name>
        <servlet-class>com.example.catalog.StudentManagementServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/added</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <url-pattern>/forgotpassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>landingAdminServlet</servlet-name>
        <url-pattern>/landingadmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>landingTeacherServlet</servlet-name>
        <url-pattern>/landingteacher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentEnrollmentTicketServlet</servlet-name>
        <url-pattern>/studentenrollment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentManagementServlet</servlet-name>
        <url-pattern>/studentmanagement</url-pattern>
    </servlet-mapping>
</web-app>
